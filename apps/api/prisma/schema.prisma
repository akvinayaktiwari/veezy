generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum BookingStatus {
  PENDING
  CONFIRMED
  COMPLETED
  EXPIRED
  CANCELLED
}

// Models

model Tenant {
  id        String   @id @default(uuid()) @db.Uuid
  name      String
  userId    String   @unique // Links to Supabase auth.users
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  agents   Agent[]
  leads    Lead[]
  bookings Booking[]

  @@map("tenants")
}

model Agent {
  id               String   @id @default(uuid()) @db.Uuid
  tenantId         String   @db.Uuid
  name             String
  knowledge        String   @db.Text // Plain text knowledge base for POC
  publicLink       String   @unique @default(uuid()) // UUID for public booking link
  linkExpiryHours  Int      @default(24) // Hours until booking link expires
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Relations
  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  leads    Lead[]
  bookings Booking[]

  // Indexes
  @@index([tenantId])
  @@index([publicLink])
  @@map("agents")
}

model Lead {
  id        String    @id @default(uuid()) @db.Uuid
  agentId   String    @db.Uuid
  tenantId  String    @db.Uuid // For multi-tenant isolation
  name      String
  email     String
  bookedAt  DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  // Relations
  agent    Agent     @relation(fields: [agentId], references: [id], onDelete: Cascade)
  tenant   Tenant    @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  bookings Booking[]

  // Indexes
  @@index([agentId])
  @@index([tenantId])
  @@index([email])
  @@map("leads")
}

model Booking {
  id           String        @id @default(uuid()) @db.Uuid
  leadId       String        @db.Uuid
  agentId      String        @db.Uuid // Added for direct agent reference
  tenantId     String        @db.Uuid // Added for multi-tenant isolation
  scheduledAt  DateTime
  status       BookingStatus @default(PENDING)
  expiresAt    DateTime      // Calculated from scheduledAt + agent.linkExpiryHours
  meetingToken String        @unique @default(uuid()) // Unique token for public meeting access
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt

  // Relations
  lead   Lead   @relation(fields: [leadId], references: [id], onDelete: Cascade)
  agent  Agent  @relation(fields: [agentId], references: [id], onDelete: Cascade)
  tenant Tenant @relation(fields: [tenantId], references: [id], onDelete: Cascade)

  // Indexes
  @@index([leadId])
  @@index([agentId])
  @@index([tenantId])
  @@index([status])
  @@index([expiresAt])
  @@index([meetingToken])
  @@map("bookings")
}
