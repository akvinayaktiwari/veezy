# ==============================================================================
# Voice Agent Microservice - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values

# ------------------------------------------------------------------------------
# LiveKit Configuration
# Get credentials from https://livekit.io/cloud or self-hosted server
# ------------------------------------------------------------------------------

# LiveKit server WebSocket URL
# For LiveKit Cloud: wss://your-project.livekit.cloud
# For self-hosted: wss://your-server:7880
LIVEKIT_URL=wss://your-project.livekit.cloud

# LiveKit API Key (from LiveKit Cloud dashboard or server config)
LIVEKIT_API_KEY=your_livekit_api_key

# LiveKit API Secret (from LiveKit Cloud dashboard or server config)
LIVEKIT_API_SECRET=your_livekit_api_secret

# ------------------------------------------------------------------------------
# Google Gemini Configuration
# Get API key from https://makersuite.google.com/app/apikey
# ------------------------------------------------------------------------------

# Google Gemini API Key
GEMINI_API_KEY=your_gemini_api_key

# Gemini model to use (gemini-1.5-flash recommended for speed)
GEMINI_MODEL=gemini-1.5-flash

# ------------------------------------------------------------------------------
# Speech-to-Text (Vosk) Configuration
# Model is downloaded automatically by setup.py
# ------------------------------------------------------------------------------

# Path to Vosk model directory (relative to voice-agent directory)
VOSK_MODEL_PATH=models/vosk-model-small-en-in-0.4

# ------------------------------------------------------------------------------
# Text-to-Speech (Coqui TTS) Configuration
# Model is downloaded automatically on first use
# ------------------------------------------------------------------------------

# Coqui TTS model name
# Options: tts_models/en/ljspeech/tacotron2-DDC (recommended)
#          tts_models/en/ljspeech/glow-tts
#          tts_models/en/vctk/vits (multi-speaker)
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC

# ------------------------------------------------------------------------------
# Server Configuration
# ------------------------------------------------------------------------------

# Port for FastAPI server
PORT=8000

# Logging level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# CORS allowed origins (comma-separated)
# Add your frontend URLs here
CORS_ORIGINS=http://localhost:3000,http://localhost:4000
